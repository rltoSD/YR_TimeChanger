{
    "name": "YR_TimeChanger",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Changes opened field on ServiceNow platform to any timezone according to your offset.",
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "contentscript.js"
            ]
        }
    ],
    "permissions": [
        "https://*/*",
        "http://*/*",
        "tabs"
    ],
    "web_accessible_resources": [
        "script.js"
    ]
}